{% include 'header.twig' %}

{% if view.viewErrors %}
    <div class="block-errors">
        {% for error in view.viewErrors %}
            <div>â€¢ {{ error }}</div>
        {% endfor %}
    </div>
{% endif %}

<form method="POST" enctype="multipart/form-data">
    <table cellpadding="3">
        <tr>
            <td><label><b>First Name:</b><br><input type="text" name="first_name" maxlength="20" placeholder="Your first name" value="{{ view.first_name }}" /></label></td>
            <td><label><b>Mail:</b><br><input type="text" name="mail" maxlength="50" placeholder="Your mail" value="{{ view.mail }}" /></label></td>
        </tr>
        <tr>
            <td><label><b>Password:</b><br><input type="password" name="password" maxlength="255" placeholder="Password" value="" /></label></td>
            <td><label><b>Re-Password:</b><br><input type="password" name="repassword" maxlength="255" placeholder="Retype password" value="" /></label></td>
        </tr>
        <tr>
            <td><label><b>birthdate:</b><br><input type="text" name="birthdate" maxlength="10" placeholder="DD.MM.YYYY" value="{{ view.birthdate }}" autocomplete="off" /></label></td>
            <td><label><b>Description:</b><br><input type="text" name="description" maxlength="255" placeholder="About you" value="{{ view.description }}" /></label></td>
        </tr>
        <tr>
            <td><label><b>Photo:</b><br><input type="file" name="photo" /></label></td>
            <td><br><input type="submit" value="Sign up" /></td>
        </tr>
    </table>
</form>
<script>
    $( "input[name=birthdate]" ).datepicker({
        dateFormat: "dd.mm.yy"
    });
</script>
<style>
    div.block-errors {
        color:red;
        padding:10px;
    }
</style>

{% include 'footer.twig' %}