{% include 'header.twig' %}

<b>Id:</b> {{ view.curUser.id }}<br>
<b>Mail:</b> {{ view.curUser.mail }}<br>
<b>Name:</b> {{ view.curUser.first_name }}<br>
<b>Descr:</b> {{ view.curUser.description }}<br>
<b>Birthdate:</b> {{ view.curUser.birthdate }}<br><br>

<h2>Uploaded photos:</h2>

<div class="container-photos">
    {% for photo in view.photos %}
        <div><a href="{{ photo.file_path }}" target="_blank"><img src="{{ photo.file_path }}" /></a></div>
    {% endfor %}
</div>

<style>
    .container-photos {
        width:1000px;
    }
    .container-photos > div {
        display: inline-block;
    }
    .container-photos > div > a > img {
        max-width: 200px;
        max-height: 100px;
    }
</style>

{% include 'footer.twig' %}